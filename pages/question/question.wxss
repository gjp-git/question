/* pages/question/question.wxss */
@import "/pages/template/template.wxss";
@import "/pages/footer/footer.wxss";
page{
  background-color: rgb(108,34,105);
}
.background{
  width: 95%;
  position: absolute;
  top:100rpx;
  transform: translateX(-50%);
  left: 50%;
  z-index: -9
}
.timerPanel{
  text-align: center
}
.timerText{
  height: 50rpx;
  font-size: 30rpx;
  
  color: rgb(249,192,61);
}
.timer{
  height:100rpx;
  width:100rpx
}
.content{
  margin-left: auto;
  margin-right: auto;
  width:600rpx;
}
.typeText{
  font-size: 36rpx;
  text-align: center;
  color: rgb(108,34,105);
}

.typeImg{
  width: 70%;
  position: absolute; 
  transform: translateX(-50%);
  left: 50%;
  z-index: -1
}

.questionText{
  margin-top: 20rpx;
  color: white;
}

.questionDesc {
  font-size: 33rpx;
}
.radioList{
  position: relative;
  margin-top: 60rpx;
}
.buttonType {
  position: relative;
  width: 500rpx;
  font-size:30rpx;
  background-color: rgb(249,192,61);
  color: rgb(108,34,105);
  box-shadow: 4rpx 4rpx 2rpx #888888;
  border-radius:25rpx;
  margin-top:50rpx;
}
.nextButtonType {
  position: relative;
  width: 500rpx;
  font-size:30rpx;
  background-color: rgb(249,192,61);
  color: rgb(108,34,105);
  box-shadow: 4rpx 4rpx 2rpx #888888;
  border-radius:25rpx;
  margin-top:50rpx;
}


.imgLoading image{
  height:0rpx;
  width:0rpx;
  z-index: -999;
}

.choicesButton {
  position: relative;
  width: 500rpx;
  font-size:30rpx;
  background-color: rgb(143,130,188);
  color: rgb(108,34,105);
  box-shadow: 4rpx 4rpx 2rpx #888888;
  border-radius:25rpx;
  margin-top:20rpx;
}

.selected{
  background-color: rgb(249,192,61);
}
.radio{
  position:relative;
}
.sign{
  position: absolute;
  left:-25rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 60rpx;
  width:60rpx;
}

.result{
  position: absolute;
  z-index: 999;
  height:200rpx;
  width: 400rpx;
  transform:rotate(-30deg) translate(-50%);
  top:400rpx;
  left: 50%;
  opacity:0.75;
}
